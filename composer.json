{
	"name": "pedalcms/wp-cmf",
	"description": "WP Content Modeling Framework",
	"type": "library",
	"require-dev": {
		"phpunit/phpunit": "9.6",
		"wp-phpunit/wp-phpunit": "^6.8",
		"squizlabs/php_codesniffer": "^3.13.0",
		"wp-coding-standards/wpcs": "^3.2",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.1",
		"phpstan/phpstan": "^2.1",
		"szepeviktor/phpstan-wordpress": "^2.0",
		"yoast/phpunit-polyfills": "3.0",
		"wp-cli/wp-cli-bundle": "^2.12"
	},
	"require": {
		"php": ">=8.1"
	},
	"license": "GPL-2.0-or-later",
	"autoload": {
		"psr-4": {
			"Pedalcms\\WpCmf\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Pedalcms\\WpCmf\\": "tests/"
		}
	},
	"authors": [
		{
			"name": "PedalCMS"
		}
	],
	"minimum-stability": "beta",
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"test": "phpunit",
		"test-install": "bash bin/install-wp-tests.sh wordpress_test root root localhost latest",
		"cs": "phpcs --standard=WordPress src/",
		"cs:fix": "phpcbf --standard=WordPress src/",
		"cs:examples": "phpcs --standard=WordPress examples/",
		"cs:fix:examples": "phpcbf --standard=WordPress examples/",
		"cs:all": [
			"@cs",
			"@cs:examples"
		],
		"cs:fix:all": [
			"@cs:fix",
			"@cs:fix:examples"
		],
		"analyse": "phpstan analyse src/ --level=5",
		"ci": [
			"@cs:all",
			"@analyse",
			"@test"
		]
	}
}
