{
    "name": "pedalcms/wp-cmf",
    "description": "WP Content Modeling Framework",
    "type": "library",
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "wp-phpunit/wp-phpunit": "^6.8",
        "squizlabs/php_codesniffer": "^3.13.0",
        "wp-coding-standards/wpcs": "^3.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
        "phpstan/phpstan": "^2.1",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "yoast/phpunit-polyfills": "^4.0"
    },
    "require": {
        "php": ">=8.0"
    },
    "license": "GPL-2.0-or-later",
    "autoload": {
        "psr-4": {
            "Pedalcms\\WpCmf\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pedalcms\\WpCmf\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "PedalCMS"
        }
    ],
    "minimum-stability": "beta",
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=wp-cmf",
        "test:coverage": "phpunit --coverage-html=coverage",
        "test:debug": "phpunit --debug",
        "test:manager": "phpunit tests/Core/ManagerTest.php",
        "test:registrar": "phpunit tests/Core/RegistrarTest.php",
        "cs:check": "phpcs --standard=WordPress src/ tests/",
        "cs:fix": "phpcbf --standard=WordPress src/ tests/",
        "analyse": "phpstan analyse src/ --level=5",
        "ci": [
            "@cs:check",
            "@analyse",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "test": "Run all PHPUnit tests using WordPress-style test framework",
        "test:unit": "Run unit tests with WordPress conventions",
        "test:coverage": "Run tests and generate HTML coverage report",
        "test:debug": "Run tests with debug output for troubleshooting",
        "test:manager": "Run Manager class tests specifically",
        "test:registrar": "Run Registrar class tests specifically",
        "cs:check": "Check code style against WordPress coding standards",
        "cs:fix": "Auto-fix code style issues",
        "analyse": "Run static analysis with PHPStan",
        "ci": "Run continuous integration tasks (code style, analysis, tests)"
    }
}
