{
  "settings_pages": [
    {
      "id": "theme_settings",
      "title": "Theme Settings",
      "menu_title": "Theme Settings",
      "capability": "manage_options",
      "slug": "theme-settings",
      "icon": "dashicons-admin-appearance",
      "position": 60,
      "fields": [
        {
          "type": "metabox",
          "name": "general_settings_section",
          "metabox_id": "theme_general",
          "metabox_title": "General Settings",
          "label": "General Settings",
          "fields": [
            {
              "name": "site_logo_url",
              "type": "url",
              "label": "Site Logo URL",
              "placeholder": "https://example.com/logo.png",
              "description": "URL to your site logo image"
            },
            {
              "name": "site_tagline",
              "type": "text",
              "label": "Site Tagline",
              "placeholder": "Your site tagline here",
              "description": "A short description of your site",
              "default": "Just another WordPress site"
            },
            {
              "name": "copyright_text",
              "type": "text",
              "label": "Copyright Text",
              "placeholder": "© 2024 Your Company",
              "description": "Copyright notice for footer",
              "default": "© 2024 All rights reserved"
            },
            {
              "name": "maintenance_mode",
              "type": "checkbox",
              "label": "Maintenance Mode",
              "options": {
                "enabled": "Enable maintenance mode"
              },
              "description": "Show maintenance page to visitors"
            }
          ]
        },
        {
          "type": "metabox",
          "name": "colors_section",
          "metabox_id": "theme_colors",
          "metabox_title": "Color Scheme",
          "label": "Color Scheme",
          "fields": [
            {
              "name": "primary_color",
              "type": "color",
              "label": "Primary Color",
              "default": "#0073aa",
              "description": "Main theme color"
            },
            {
              "name": "secondary_color",
              "type": "color",
              "label": "Secondary Color",
              "default": "#005177",
              "description": "Secondary theme color"
            },
            {
              "name": "accent_color",
              "type": "color",
              "label": "Accent Color",
              "default": "#2271b1",
              "description": "Accent color for highlights"
            },
            {
              "name": "background_color",
              "type": "color",
              "label": "Background Color",
              "default": "#ffffff",
              "description": "Page background color"
            },
            {
              "name": "text_color",
              "type": "color",
              "label": "Text Color",
              "default": "#333333",
              "description": "Main text color"
            }
          ]
        },
        {
          "type": "metabox",
          "name": "typography_section",
          "metabox_id": "theme_typography",
          "metabox_title": "Typography",
          "label": "Typography Settings",
          "fields": [
            {
              "name": "font_family",
              "type": "select",
              "label": "Font Family",
              "options": {
                "system": "System Default",
                "arial": "Arial",
                "helvetica": "Helvetica",
                "georgia": "Georgia",
                "times": "Times New Roman",
                "courier": "Courier New",
                "roboto": "Roboto (Google Font)",
                "open_sans": "Open Sans (Google Font)",
                "lato": "Lato (Google Font)"
              },
              "default": "system",
              "description": "Choose the main font family"
            },
            {
              "name": "base_font_size",
              "type": "number",
              "label": "Base Font Size (px)",
              "default": 16,
              "validation": {
                "min": 12,
                "max": 24,
                "step": 1
              },
              "description": "Base font size in pixels"
            },
            {
              "name": "heading_font_weight",
              "type": "select",
              "label": "Heading Font Weight",
              "options": {
                "300": "Light",
                "400": "Normal",
                "500": "Medium",
                "600": "Semi-Bold",
                "700": "Bold",
                "800": "Extra Bold"
              },
              "default": "700",
              "description": "Font weight for headings"
            }
          ]
        },
        {
          "type": "metabox",
          "name": "layout_section",
          "metabox_id": "theme_layout",
          "metabox_title": "Layout Options",
          "label": "Layout Options",
          "fields": [
            {
              "name": "site_layout",
              "type": "radio",
              "label": "Site Layout",
              "options": {
                "boxed": "Boxed",
                "full": "Full Width",
                "stretched": "Stretched"
              },
              "default": "full",
              "description": "Choose the site layout style"
            },
            {
              "name": "max_width",
              "type": "number",
              "label": "Maximum Content Width (px)",
              "default": 1200,
              "validation": {
                "min": 960,
                "max": 1920,
                "step": 10
              },
              "description": "Maximum width for content area"
            },
            {
              "name": "sidebar_position",
              "type": "select",
              "label": "Sidebar Position",
              "options": {
                "none": "No Sidebar",
                "left": "Left",
                "right": "Right"
              },
              "default": "right",
              "description": "Default sidebar position"
            }
          ]
        },
        {
          "type": "metabox",
          "name": "social_section",
          "metabox_id": "theme_social",
          "metabox_title": "Social Media",
          "label": "Social Media Links",
          "fields": [
            {
              "name": "facebook_url",
              "type": "url",
              "label": "Facebook URL",
              "placeholder": "https://facebook.com/yourpage",
              "description": "Your Facebook page URL"
            },
            {
              "name": "twitter_url",
              "type": "url",
              "label": "Twitter/X URL",
              "placeholder": "https://twitter.com/yourhandle",
              "description": "Your Twitter/X profile URL"
            },
            {
              "name": "instagram_url",
              "type": "url",
              "label": "Instagram URL",
              "placeholder": "https://instagram.com/yourhandle",
              "description": "Your Instagram profile URL"
            },
            {
              "name": "linkedin_url",
              "type": "url",
              "label": "LinkedIn URL",
              "placeholder": "https://linkedin.com/company/yourcompany",
              "description": "Your LinkedIn company/profile URL"
            },
            {
              "name": "social_icons_display",
              "type": "checkbox",
              "label": "Display Options",
              "options": {
                "header": "Show in header",
                "footer": "Show in footer",
                "mobile": "Show in mobile menu"
              },
              "description": "Where to display social media icons"
            }
          ]
        },
        {
          "type": "metabox",
          "name": "advanced_section",
          "metabox_id": "theme_advanced",
          "metabox_title": "Advanced Options",
          "label": "Advanced Options",
          "fields": [
            {
              "name": "custom_css",
              "type": "textarea",
              "label": "Custom CSS",
              "rows": 10,
              "placeholder": "/* Add your custom CSS here */",
              "description": "Add custom CSS styles"
            },
            {
              "name": "tracking_code",
              "type": "textarea",
              "label": "Tracking Code",
              "rows": 5,
              "placeholder": "<script>/* Analytics code */</script>",
              "description": "Add tracking scripts (Google Analytics, etc.)"
            },
            {
              "name": "performance_options",
              "type": "checkbox",
              "label": "Performance",
              "options": {
                "lazy_load": "Enable lazy loading for images",
                "minify_css": "Minify CSS files",
                "minify_js": "Minify JavaScript files",
                "cache_enabled": "Enable page caching"
              },
              "description": "Performance optimization options"
            }
          ]
        }
      ]
    }
  ]
}
